<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginscreen_background">

    <EditText
        android:id="@+id/loginscreen_email_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/loginscreen_inputfield_right"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FAFAFA"
        android:textColorLink="#000000"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_logo" />

    <ImageView
        android:id="@+id/loginscreen_logo"
        android:layout_width="0dp"
        android:layout_height="219dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="163dp"
        android:src="@drawable/full_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/loginscreen_login_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/roundstyle"
        android:backgroundTint="#54BE70"
        android:fontFamily="@font/inter_extrabold"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_error_text" />

    <TextView
        android:id="@+id/loginscreen_forgotpasssword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Forgot username of password?"
        android:textAlignment="center"
        android:textColor="#D0D0D0"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:onClick="switchToHome"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_login_btn" />

    <TextView
        android:id="@+id/loginscreen_switchtosignup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Want to start an organization?"
        android:textAlignment="center"
        android:textColor="#D0D0D0"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:onClick="switchToSignup" />

    <View
        android:id="@+id/loginscreen_view_account"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-1dp"
        android:background="@drawable/loginscreen_inputfield_left"
        app:layout_constraintEnd_toStartOf="@+id/loginscreen_email_input"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_logo" />

    <View
        android:id="@+id/loginscreen_view_password"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-1dp"
        android:background="@drawable/loginscreen_inputfield_left"
        app:layout_constraintEnd_toStartOf="@+id/loginscreen_password_input"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_view_account" />

    <ImageView
        android:id="@+id/loginscreen_icon_password"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_lock"
        app:layout_constraintStart_toStartOf="@+id/loginscreen_view_password"
        app:layout_constraintTop_toTopOf="@+id/loginscreen_view_password" />

    <ImageView
        android:id="@+id/loginscreen_icon_account"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_avatar"
        app:layout_constraintStart_toStartOf="@+id/loginscreen_view_account"
        app:layout_constraintTop_toTopOf="@+id/loginscreen_view_account" />

    <EditText
        android:id="@+id/loginscreen_password_input"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/loginscreen_inputfield_right"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#000000"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_email_input" />

    <TextView
        android:id="@+id/loginscreen_error_text"
        android:layout_width="260dp"
        android:layout_height="31dp"
        android:textAlignment="center"
        android:textColor="#FF0E0E"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_password_input" />

</androidx.constraintlayout.widget.ConstraintLayout>